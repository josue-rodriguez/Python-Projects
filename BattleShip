from random import randint

board = []

for x in range(5):
    board.append(["O"]*5)
# for x in range(5): [2]: do the following command for the range of 1-5 (i.e. 5 times)
#     board.append(["O"]*5) [1]: Append 5 "O"s to board

print(board)

# join all Os in board with empty spaces
def print_board(board):
    for row in board:
        print (" ".join(row))

print("Let's play Battleship!")
print_board(board)

def random_row(board):
    return randint(0, len(board) - 1)

def random_col(board):
    return randint(0, len(board[0]) - 1)

ship_row = random_row(board)
ship_col = random_col(board)
# print(ship_row)
# print(ship_col)

for turn in range(4): # do the next things for ranges 1 - 4 (i.e. 4 times)
    guess_row = int(input("Guess Row:"))
    guess_col = int(input("Guess Col:"))

    if guess_row == ship_row and guess_col == ship_col:
        print("Congratulations, bitch! You sunk my battleship.")
        break
    else:
        if (guess_row < 0 or guess_row > 4) or (guess_col < 0 or guess_col > 4):
            print("Oops, that's not even in the ocean.")
        elif(board[guess_row][guess_col] == "X"):
            print("You guessed that one already, idiot.")
        else:
            print("You missed my battleship! Try harder.")
            board[guess_row][guess_col] = "X"
    if turn == 4:
        print("Game Over. You lose. :(")
        break
    print("Turn", turn + 1)
    print_board(board)


